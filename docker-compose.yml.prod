version: "3"
services:
  db:
    image: "postgres:14"
    volumes:
      - ./pgdata:/var/lib/postgresql/data
    environment:
      - POSTGRES_USER=dbuser
      - POSTGRES_PASSWORD=admin2021
      - POSTGRES_DB=home_resource_planning
    restart: always

  api:
    image: "hrp_api"
    build:
      context: .
      dockerfile: api/Dockerfile
    container_name: api
    ports:
      - 8080:80
    depends_on:
      - db

  app:
    image: "hrp_app"
    build:
      context: .
      dockerfile: app/Dockerfile
    container_name: app
    ports:
      - 80:80
    depends_on:
      - db
